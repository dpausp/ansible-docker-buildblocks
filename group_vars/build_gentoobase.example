### settings for the gentoo base image

# en_EN.UTF-8 is generated by default, add your locales to this var
#gentoo_non_english_locales: 
#    - de_DE.UTF-8 UTF-8
#    - fi_FI.UTF-8 UTF-8

#gentoo_mirrors: http://de-mirror.org/gentoo/

# name of the final docker image
#image_name=gentoobase 

# path to portage on the docker host
#local_portage_path=~/docker/gentoo/portage 

#gentoo_arch=amd64 
#gentoo_variant=hardened+nomultilib

